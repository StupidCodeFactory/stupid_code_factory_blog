!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title StupidCodeFactoryBlog
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    = stylesheet_pack_tag 'application'
    = javascript_include_tag 'application'
    = javascript_pack_tag 'application'

  %body
    - if admin_author_signed_in?
      %main
        #app-container
    - else
      #top
        %nav#brand
          = link_to "Stupid Code Factory's Blog Admin", admin_root_path, class: 'upper'
        -# %nav
        -#   %ul
        -#     %li
        -#       = link_to admin_articles_path do
          -#         = icon('plus-square')
        -#         article
      .row.auto
        .col.col-8
          %p.notice
            = notice
          %p.alert
            = alert
        .col
      .row
        .col.col-2
        .col.col-8
          = link_to 'sign in', admin_author_github_omniauth_authorize_path, class: 'button'
