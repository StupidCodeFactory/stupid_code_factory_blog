!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title StupidCodeFactoryBlog
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    = stylesheet_pack_tag 'application'
    = javascript_include_tag 'application'
    = javascript_pack_tag 'application'

  %body
    = render 'layouts/navbar'
    - if admin_author_signed_in?
      %main#app-container

    - else
      %main
        .row
          %section.col.col-8.push-center

        .row.auto
          .col.col-8
            %p.notice
              = notice
            %p.alert
              = alert
          .col
        .row
          .col.col-2
          .col.col-8
            = link_to 'sign in', admin_author_github_omniauth_authorize_path, class: 'button'
    = render 'layouts/footer'
